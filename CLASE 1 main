        System.out.println("Resgistro de Asistencia");
        Scanner nou=new Scanner(System.in);
        for (Persona dper:nomVec2) {
            System.out.println("Esta presente Â¿ "+dper.nombre+"? : ");
            //dper.estadoAsis= nou.nextLine();
            dper.fecha=new Date();
            dper.setEstadoAsis(nou.nextLine());

            //
        }
        System.out.println("Mostror registro de asistencia ");
        for (Persona dper:nomVec2) {

            //System.out.println(dper.nombre + " - " + dper.estadoAsis);
